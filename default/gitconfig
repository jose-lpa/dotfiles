[alias]
    # Git logging makeup.
    glog = log --graph --decorate=full

    # A more compact logging version to show just the commit hashes + messages in
    # a nice graph.
    log-compact = log --graph --decorate --pretty=oneline --abbrev-commit --abbrev=8
